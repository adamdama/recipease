{
  "name": "recipease",
  "version": "0.0.0",
  "description": "App for managing recipes",
  "author": {
    "name": "Adam Cox",
    "email": "adamdama@hotmail.com"
  },
  "contributors": [
    {
      "name": "Jane Bentley",
      "email": "janevbentley@gmail.com"
    }
  ],
  "main": "index.js",
  "engines": {
    "node": ">=12.0.0",
    "yarn": "^1.20"
  },
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "lint": "yarn -s lint:client && yarn -s lint:server",
    "lint:client": "cd client && yarn -s lint",
    "lint:server": "cd server && yarn -s lint"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "client/src/**/*.{js,ts,vue}": [
      "yarn lint:client"
    ],
    "server/src/**/*.{js,ts}": [
      "yarn lint:server"
    ],
    "*.{json,yaml,yml,gql,scss,md,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.1",
    "lint-staged": "^10.0.3",
    "prettier": "^2.0.5",
    "typescript": "~3.8.3",
    "yorkie": "^2.0.0"
  }
}
